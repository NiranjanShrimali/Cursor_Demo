@model IEnumerable<Cursor_Demo.Models.Tenant>
@{
	ViewData["Title"] = "Companies";
}
<div class="d-flex justify-content-between align-items-center mb-3">
	<h2>Companies</h2>
	<a class="btn btn-primary" asp-action="Create">New Company</a>
</div>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Domain</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Domain</td>
				<td class="text-end">
					<a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
					<a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>


